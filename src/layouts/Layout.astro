---
interface Props {
	title: string;
	description?: string;
}

const {
	title,
	description = "Penticton's trusted contractor for decks, fences, kitchens, bathrooms, flooring & drywall. Quality work, reliable service."
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const ogImage = new URL('/images/blueprints-1000.jpg', Astro.site);
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content={description} />
		<link rel="canonical" href={canonicalURL.href} />

		<!-- Open Graph -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonicalURL.href} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={ogImage.href} />
		<meta property="og:locale" content="en_CA" />
		<meta property="og:site_name" content="Trubuild Construction" />

		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={ogImage.href} />

		<!-- Favicon -->
		<link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png" />
		<link rel="manifest" href="/favicon/site.webmanifest" />

		<title>{title}</title>

		<!-- LocalBusiness structured data -->
		<script type="application/ld+json" set:html={JSON.stringify({
			"@context": "https://schema.org",
			"@type": "HomeAndConstructionBusiness",
			"name": "Trubuild Construction",
			"url": "https://trubuildpenticton.ca",
			"telephone": "+1-250-487-0748",
			"email": "trubuildcon@gmail.com",
			"address": {
				"@type": "PostalAddress",
				"addressLocality": "Penticton",
				"addressRegion": "BC",
				"addressCountry": "CA"
			},
			"areaServed": {
				"@type": "City",
				"name": "Penticton"
			},
			"description": description,
			"image": ogImage.href,
			"sameAs": [
				"https://www.facebook.com/profile.php?id=61567496781817"
			]
		})} />

		<!-- Google Analytics (GA4) -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=G-8VF7K3S449"></script>
		<script is:inline>
			window.dataLayer = window.dataLayer || [];
			function gtag(){dataLayer.push(arguments);}
			gtag('js', new Date());
			gtag('config', 'G-8VF7K3S449');
		</script>

		<!-- Font Awesome (CSS-only, with font-display swap) -->
		<link rel="preconnect" href="https://ka-f.fontawesome.com" crossorigin />
		<script src="https://kit.fontawesome.com/4f4f3b0c03.js" crossorigin="anonymous" defer></script>
		<style is:inline>
			@font-face { font-family: "Font Awesome 6 Free"; font-display: swap; }
			@font-face { font-family: "Font Awesome 6 Brands"; font-display: swap; }
		</style>

		<!-- Google Fonts: Montserrat with font-display swap -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" />
	</head>
	<body class="antialiased">
		<slot />
	</body>
</html>

<style is:global>
	@import "tailwindcss";

	html {
		scroll-behavior: smooth;
	}

	body, html {
		margin: 0;
		padding: 0;
	}

	body {
		font-family: 'Montserrat', 'Segoe UI', sans-serif;
	}
</style>
