---
// Hero section with background image and CTA text
import { Image } from 'astro:assets';
import heroImage from '../assets/blueprints.webp';
---

<section
	id="home"
	class="relative h-screen w-full overflow-hidden"
>
	<!-- Hero background image (proper <img> for LCP) -->
	<Image
		src={heroImage}
		alt=""
		widths={[640, 1024, 1600]}
		sizes="100vw"
		class="absolute inset-0 w-full h-full object-cover"
		loading="eager"
		fetchpriority="high"
	/>

	<!-- Content -->
	<div class="relative z-10 flex flex-col items-center justify-center h-full text-white text-center px-4" style="text-shadow: 2px 2px 4px rgba(0,0,0,0.8);">
		<h1 class="text-3xl md:text-5xl font-semibold mb-8 md:mb-12">
			Your vision starts with us.
		</h1>
		<h2 class="text-xl md:text-2xl font-semibold mb-2">
			High Quality Renovations
		</h2>
		<h2 class="text-xl md:text-2xl font-semibold mb-6">
			Trusted Professionals
		</h2>
		<a href="#contact">
			<button class="mt-4 rounded px-5 py-2 pb-3 text-xl font-bold cursor-pointer text-white border border-white bg-black/50 hover:bg-black/60 hover:text-gray-300 hover:border-blue-200">
				Get in Touch
			</button>
		</a>
	</div>
</section>
