---
// Contact form section
---

<section id="contact" class="relative py-24 bg-gray-900">
	<div class="container mx-auto px-4">
		<!-- Heading -->
		<div class="text-center mb-12">
			<h2 class="text-4xl font-semibold text-white mb-4">Build something</h2>
			<p class="text-lg text-gray-400 max-w-2xl mx-auto">
				Bringing ideas to life begins with a conversation. Let's discuss how we can make your renovation goals a reality.
			</p>
		</div>

		<!-- Contact Form -->
		<div class="flex justify-center">
			<div class="w-full lg:w-6/12">
				<div class="bg-gray-300 rounded-lg shadow-lg p-8">
					<h3 class="text-2xl font-semibold mb-2">Want to work with us?</h3>
					<p class="text-gray-600 mb-6">
						Complete this form and we will contact you.
					</p>

					<form action="https://formsubmit.co/f514489c23b42c2e427fc9ac54e2828a" method="POST" class="space-y-6">
						<input type="hidden" name="_cc" value="info@trubuildpenticton.ca,trubuildcon@gmail.com" />
						<input type="hidden" name="_subject" value="New Trubuild Construction Contact Form Submission" />

						<!-- Full Name -->
						<div>
							<label for="full-name" class="block text-xs font-bold uppercase text-gray-700 mb-2">
								Full Name
							</label>
							<input
								type="text"
								id="full-name"
								name="name"
								required
								class="w-full px-3 py-3 text-gray-700 bg-white rounded border-0 shadow focus:outline-none focus:ring-2 focus:ring-blue-500"
								placeholder="Your full name"
							/>
						</div>

						<!-- Email -->
						<div>
							<label for="email" class="block text-xs font-bold uppercase text-gray-700 mb-2">
								Email
							</label>
							<input
								type="email"
								id="email"
								name="email"
								required
								class="w-full px-3 py-3 text-gray-700 bg-white rounded border-0 shadow focus:outline-none focus:ring-2 focus:ring-blue-500"
								placeholder="your@email.com"
							/>
						</div>

						<!-- Phone -->
						<div>
							<label for="phone" class="block text-xs font-bold uppercase text-gray-700 mb-2">
								Phone
							</label>
							<input
								type="tel"
								id="phone"
								name="phone"
								class="w-full px-3 py-3 text-gray-700 bg-white rounded border-0 shadow focus:outline-none focus:ring-2 focus:ring-blue-500"
								placeholder="(250) 123-4567"
							/>
						</div>

						<!-- Message -->
						<div>
							<label for="message" class="block text-xs font-bold uppercase text-gray-700 mb-2">
								Message
							</label>
							<textarea
								id="message"
								name="message"
								required
								rows="6"
								class="w-full px-3 py-3 text-gray-700 bg-white rounded border-0 shadow focus:outline-none focus:ring-2 focus:ring-blue-500"
								placeholder="Tell us about your project..."
							></textarea>
						</div>

						<!-- Submit Button -->
						<div class="text-center">
							<button
								type="submit"
								class="bg-blue-600 text-white font-bold uppercase text-sm px-8 py-3 rounded shadow hover:bg-blue-700 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500"
							>
								Send Message
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</section>
