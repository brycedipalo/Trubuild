---
// Customer Reviews section
import { Image } from 'astro:assets';
import reviewsImage from '../assets/AllReviews.jpg';
---

<section class="py-16 bg-white">
	<div class="container mx-auto px-4">
		<h2 class="text-2xl font-semibold text-center mb-8">Customer Reviews</h2>

		<!-- Google Reviews Image -->
		<div class="flex justify-center">
			<Image
				src={reviewsImage}
				alt="Google Customer Reviews for Trubuild Construction"
				widths={[400, 706]}
				sizes="(max-width: 768px) 100vw, 706px"
				class="max-w-full h-auto rounded-lg shadow-lg"
				loading="lazy"
			/>
		</div>
	</div>
</section>
